{
  "name": "forge",
  "version": "0.1.0",
  "description": "A build tool for customizing Firefox",
  "type": "module",
  "bin": {
    "forge": "./bin/forge.ts"
  },
  "scripts": {
    "forge": "tsx bin/forge.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"bin/**/*.ts\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "EUPL-1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/topfi/forge.git"
  },
  "keywords": [
    "firefox",
    "browser",
    "build-tool",
    "patches"
  ]
}
